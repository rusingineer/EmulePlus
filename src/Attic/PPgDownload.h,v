	CButton showFileStatusIconsCheck;
	CButton SmartFilterShowSourcesOQCheck;
	CEdit   SmartFilterMaxQREdit;
	CStatic SmartFilterMaxQRLabel;
	CButton autoClearCompletedCheck;
};
